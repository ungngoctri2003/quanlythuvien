@model ThuVien.Models.TacGia

@{
    ViewBag.Title = "Thêm Tác Giả";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <div class="container">
        <h2><i class="notika-icon notika-plus" style="margin-right: 10px;"></i>Thêm Tác Giả Mới</h2>
    </div>
</div>

<div class="page-container">
    <div class="container">
        <div class="content-wrapper">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="card">
                    <div class="card-header">
                        <i class="notika-icon notika-app" style="margin-right: 8px;"></i>Thông Tin Tác Giả
                    </div>
                    <div class="card-body">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger", style = "margin-bottom: 20px;" })

                        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 20px;">
                            <div class="form-group">
                                @Html.LabelFor(model => model.MaTacGia, htmlAttributes: new { @class = "form-label" })
                                @Html.EditorFor(model => model.MaTacGia, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập mã tác giả" } })
                                @Html.ValidationMessageFor(model => model.MaTacGia, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.TenTacGia, htmlAttributes: new { @class = "form-label" })
                                @Html.EditorFor(model => model.TenTacGia, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập tên tác giả" } })
                                @Html.ValidationMessageFor(model => model.TenTacGia, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group" style="grid-column: 1 / -1;">
                                @Html.LabelFor(model => model.DiaChi, htmlAttributes: new { @class = "form-label" })
                                @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập địa chỉ" } })
                                @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div style="display: flex; gap: 10px; margin-top: 30px;">
                            <input type="submit" value="Thêm Mới" class="btn btn-success" style="color: #000;" />
                            @Html.ActionLink("Quay Lại", "Index", null, new { @class = "btn btn-secondary" })
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
