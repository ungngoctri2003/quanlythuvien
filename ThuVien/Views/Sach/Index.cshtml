@model IEnumerable<ThuVien.Models.Sach>

@{
    ViewBag.Title = "Danh Sách Sách";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <div class="container">
        <h2><i class="notika-icon notika-edit" style="margin-right: 10px;"></i>Danh Sách Sách</h2>
    </div>
</div>

<div class="page-container">
    <div class="container">
        <div class="content-wrapper">
            <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
                <h3 style="margin: 0; color: #667eea;">Quản lý sách</h3>
                @Html.ActionLink("Thêm Mới", "Create", null, new { @class = "btn btn-primary", style = "color: #000;" })
            </div>

            <div class="table-wrapper">
                @if (Model != null && Model.Any())
                {
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Mã Sách</th>
                                <th>Tên Sách</th>
                                <th>Loại Sách</th>
                                <th>NXB</th>
                                <th>Tác Giả</th>
                                <th>Vị Trí</th>
                                <th>Năm XB</th>
                                <th>Số Lượng</th>
                                <th>Ngôn Ngữ</th>
                                <th style="text-align: center;">Thao Tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><strong>@Html.DisplayFor(modelItem => item.MaSach)</strong></td>
                                    <td style="max-width: 200px;">
                                        <div style="font-weight: 500; color: #333;">@Html.DisplayFor(modelItem => item.TenSach)</div>
                                    </td>
                                    <td>
                                        @if (item.LoaiSach1 != null)
                                        {
                                            <span class="badge badge-primary">@Html.DisplayFor(modelItem => item.LoaiSach1.MaLoaiSach)</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.NXB1 != null)
                                        {
                                            <span class="badge badge-warning">@Html.DisplayFor(modelItem => item.NXB1.MaNXB)</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.TacGia1 != null)
                                        {
                                            <span class="badge badge-info">@Html.DisplayFor(modelItem => item.TacGia1.MaTacGia)</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.ViTri1 != null)
                                        {
                                            <span class="badge badge-success">@Html.DisplayFor(modelItem => item.ViTri1.MaViTri)</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>@Html.DisplayFor(modelItem => item.NamXB)</td>
                                    <td>
                                        <span class="badge @(item.SoLuong > 0 ? "badge-success" : "badge-danger")">
                                            @Html.DisplayFor(modelItem => item.SoLuong)
                                        </span>
                                    </td>
                                    <td>@Html.DisplayFor(modelItem => item.NgonNgu)</td>
                                    <td>
                                        <div class="action-links">
                                            @Html.ActionLink("Sửa", "Edit", new { id = item.ID }, new { @class = "btn-edit" })
                                            @Html.ActionLink("Chi Tiết", "Details", new { id = item.ID }, new { @class = "btn-details" })
                                            @Html.ActionLink("Xóa", "Delete", new { id = item.ID }, new { @class = "btn-delete" })
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="empty-state">
                        <i class="notika-icon notika-edit"></i>
                        <h3>Chưa có dữ liệu</h3>
                        <p>Hãy thêm sách mới để bắt đầu quản lý.</p>
                        @Html.ActionLink("Thêm Sách", "Create", null, new { @class = "btn btn-primary mt-3" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>
