@model ThuVien.Models.Sach

@{
    ViewBag.Title = "Xóa Sách";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header" style="background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);">
    <div class="container">
        <h2><i class="notika-icon notika-close" style="margin-right: 10px;"></i>Xóa Sách</h2>
    </div>
</div>

<div class="page-container">
    <div class="container">
        <div class="content-wrapper">
            <div class="card" style="max-width: 900px; margin: 0 auto; border-left: 5px solid #dc3545;">
                <div class="card-header" style="background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);">
                    <i class="notika-icon notika-close" style="margin-right: 8px;"></i>Cảnh Báo Xóa
                </div>
                <div class="card-body">
                    <div style="text-align: center; margin-bottom: 30px;">
                        <div style="width: 80px; height: 80px; background: linear-gradient(135deg, #dc3545 0%, #c82333 100%); border-radius: 50%; display: inline-flex; align-items: center; justify-content: center; margin-bottom: 20px;">
                            <i class="notika-icon notika-close" style="font-size: 40px; color: white;"></i>
                        </div>
                        <h3 style="color: #dc3545; margin-bottom: 10px;">Bạn có chắc chắn muốn xóa?</h3>
                        <p style="color: #6c757d;">Hành động này không thể hoàn tác. Dữ liệu sẽ bị xóa vĩnh viễn.</p>
                    </div>

                    <div style="background: #fff3cd; border: 1px solid #ffc107; border-radius: 8px; padding: 20px; margin-bottom: 30px;">
                        <h4 style="color: #856404; margin-bottom: 15px; display: flex; align-items: center;">
                            <i class="notika-icon notika-warning" style="margin-right: 10px;"></i>Thông Tin Sách Sẽ Bị Xóa:
                        </h4>
                        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 15px;">
                            <div>
                                <div style="font-size: 0.85rem; color: #856404; margin-bottom: 5px;">Mã Sách</div>
                                <div style="font-weight: 600; color: #333;">
                                    <span class="badge badge-primary">@Html.DisplayFor(model => model.MaSach)</span>
                                </div>
                            </div>
                            <div>
                                <div style="font-size: 0.85rem; color: #856404; margin-bottom: 5px;">Tên Sách</div>
                                <div style="font-weight: 600; color: #333;">@Html.DisplayFor(model => model.TenSach)</div>
                            </div>
                            <div>
                                <div style="font-size: 0.85rem; color: #856404; margin-bottom: 5px;">Loại Sách</div>
                                <div style="font-weight: 600; color: #333;">
                                    @if (Model.LoaiSach1 != null)
                                    {
                                        <span class="badge badge-primary">@Html.DisplayFor(model => model.LoaiSach1.MaLoaiSach)</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </div>
                            </div>
                            <div>
                                <div style="font-size: 0.85rem; color: #856404; margin-bottom: 5px;">Nhà Xuất Bản</div>
                                <div style="font-weight: 600; color: #333;">
                                    @if (Model.NXB1 != null)
                                    {
                                        <span class="badge badge-warning">@Html.DisplayFor(model => model.NXB1.MaNXB)</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </div>
                            </div>
                            <div>
                                <div style="font-size: 0.85rem; color: #856404; margin-bottom: 5px;">Tác Giả</div>
                                <div style="font-weight: 600; color: #333;">
                                    @if (Model.TacGia1 != null)
                                    {
                                        <span class="badge badge-info">@Html.DisplayFor(model => model.TacGia1.MaTacGia)</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </div>
                            </div>
                            <div>
                                <div style="font-size: 0.85rem; color: #856404; margin-bottom: 5px;">Vị Trí</div>
                                <div style="font-weight: 600; color: #333;">
                                    @if (Model.ViTri1 != null)
                                    {
                                        <span class="badge badge-success">@Html.DisplayFor(model => model.ViTri1.MaViTri)</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </div>
                            </div>
                            <div>
                                <div style="font-size: 0.85rem; color: #856404; margin-bottom: 5px;">Năm Xuất Bản</div>
                                <div style="font-weight: 600; color: #333;">@Html.DisplayFor(model => model.NamXB)</div>
                            </div>
                            <div>
                                <div style="font-size: 0.85rem; color: #856404; margin-bottom: 5px;">Số Lượng</div>
                                <div style="font-weight: 600; color: #333;">
                                    <span class="badge @(Model.SoLuong > 0 ? "badge-success" : "badge-danger")">
                                        @Html.DisplayFor(model => model.SoLuong)
                                    </span>
                                </div>
                            </div>
                            <div>
                                <div style="font-size: 0.85rem; color: #856404; margin-bottom: 5px;">Ngôn Ngữ</div>
                                <div style="font-weight: 600; color: #333;">@Html.DisplayFor(model => model.NgonNgu)</div>
                            </div>
                            <div>
                                <div style="font-size: 0.85rem; color: #856404; margin-bottom: 5px;">Trạng Thái Mượn</div>
                                <div style="font-weight: 600; color: #333;">
                                    @if (Model.PhieuMuon != null)
                                    {
                                        <span class="badge badge-warning">Đang mượn (@Html.DisplayFor(model => model.PhieuMuon.MaMuon))</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-success">Có sẵn</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div style="display: flex; gap: 10px; justify-content: center;">
                            <input type="submit" value="Xác Nhận Xóa" class="btn btn-danger" style="min-width: 150px; color: #000; font-weight: 500;" />
                            @Html.ActionLink("Hủy Bỏ", "Index", null, new { @class = "btn btn-secondary", style = "min-width: 150px;" })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
