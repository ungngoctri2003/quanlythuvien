@model ThuVien.Models.Sach

@{
    ViewBag.Title = "Thêm Sách";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <div class="container">
        <h2><i class="notika-icon notika-plus" style="margin-right: 10px;"></i>Thêm Sách Mới</h2>
    </div>
</div>

<div class="page-container">
    <div class="container">
        <div class="content-wrapper">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="card">
                    <div class="card-header">
                        <i class="notika-icon notika-edit" style="margin-right: 8px;"></i>Thông Tin Sách
                    </div>
                    <div class="card-body">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger", style = "margin-bottom: 20px;" })

                        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 20px;">
                            <div class="form-group">
                                @Html.LabelFor(model => model.MaSach, htmlAttributes: new { @class = "form-label" })
                                @Html.EditorFor(model => model.MaSach, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập mã sách" } })
                                @Html.ValidationMessageFor(model => model.MaSach, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.TenSach, htmlAttributes: new { @class = "form-label" })
                                @Html.EditorFor(model => model.TenSach, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập tên sách" } })
                                @Html.ValidationMessageFor(model => model.TenSach, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.LoaiSach, "Loại Sách", htmlAttributes: new { @class = "form-label" })
                                @Html.DropDownList("LoaiSach", null, "-- Chọn Loại Sách --", htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.LoaiSach, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.NXB, "Nhà Xuất Bản", htmlAttributes: new { @class = "form-label" })
                                @Html.DropDownList("NXB", null, "-- Chọn NXB --", htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.NXB, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.TacGia, "Tác Giả", htmlAttributes: new { @class = "form-label" })
                                @Html.DropDownList("TacGia", null, "-- Chọn Tác Giả --", htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.TacGia, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.ViTri, "Vị Trí", htmlAttributes: new { @class = "form-label" })
                                @Html.DropDownList("ViTri", null, "-- Chọn Vị Trí --", htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ViTri, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.NamXB, htmlAttributes: new { @class = "form-label" })
                                @Html.EditorFor(model => model.NamXB, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập năm xuất bản", type = "number" } })
                                @Html.ValidationMessageFor(model => model.NamXB, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.SoLuong, htmlAttributes: new { @class = "form-label" })
                                @Html.EditorFor(model => model.SoLuong, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập số lượng", type = "number", min = "0" } })
                                @Html.ValidationMessageFor(model => model.SoLuong, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.NgonNgu, htmlAttributes: new { @class = "form-label" })
                                @Html.EditorFor(model => model.NgonNgu, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập ngôn ngữ" } })
                                @Html.ValidationMessageFor(model => model.NgonNgu, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Muon, "Phiếu Mượn", htmlAttributes: new { @class = "form-label" })
                                @Html.DropDownList("Muon", null, "-- Chưa mượn --", htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Muon, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div style="display: flex; gap: 10px; margin-top: 30px;">
                            <input type="submit" value="Thêm Mới" class="btn btn-success" style="color: #000;" />
                            @Html.ActionLink("Quay Lại", "Index", null, new { @class = "btn btn-secondary" })
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
