@model PagedList.IPagedList<ThuVien.Models.User>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Danh Sách User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <div class="container">
        <h2><i class="notika-icon notika-support" style="margin-right: 10px;"></i>Danh Sách User</h2>
    </div>
</div>

<div class="page-container">
    <div class="container">
        <div class="content-wrapper">
            <div class="page-header-title-section" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
                <h3 style="margin: 0; color: #667eea;">Quản lý tài khoản</h3>
                @Html.ActionLink("Thêm Mới", "Create", null, new { @class = "btn btn-primary", style = "color: white;" })
            </div>

            <div class="table-wrapper">
                @if (Model != null && Model.Any())
                {
                    <table class="table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Họ Tên</th>
                                <th>Email</th>
                                <th>Username</th>
                                <th>Ngày Tạo</th>
                                <th>Ngày Cập Nhật</th>
                                <th style="text-align: center;">Thao Tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><strong>#@Html.DisplayFor(modelItem => item.ID)</strong></td>
                                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                    <td><span class="badge badge-primary">@Html.DisplayFor(modelItem => item.Username)</span></td>
                                    <td>@(item.TimeCreate?.ToString("dd/MM/yyyy") ?? "-")</td>
                                    <td>@(item.TimeUpdate?.ToString("dd/MM/yyyy") ?? "-")</td>
                                    <td>
                                        <div class="action-links">
                                            @Html.ActionLink("Sửa", "Edit", new { id = item.ID }, new { @class = "btn-edit" })
                                            @Html.ActionLink("Chi Tiết", "Details", new { id = item.ID }, new { @class = "btn-details" })
                                            @Html.ActionLink("Xóa", "Delete", new { id = item.ID }, new { @class = "btn-delete" })
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div style="margin-top: 20px;">
                        Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }), 
                            new PagedListRenderOptions 
                            { 
                                DisplayLinkToFirstPage = PagedListDisplayMode.Always,
                                DisplayLinkToLastPage = PagedListDisplayMode.Always,
                                DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                                DisplayLinkToNextPage = PagedListDisplayMode.Always,
                                MaximumPageNumbersToDisplay = 5,
                                LinkToFirstPageFormat = "Đầu",
                                LinkToLastPageFormat = "Cuối",
                                LinkToPreviousPageFormat = "Trước",
                                LinkToNextPageFormat = "Sau"
                            })
                    </div>
                }
                else
                {
                    <div class="empty-state">
                        <i class="notika-icon notika-support"></i>
                        <h3>Chưa có dữ liệu</h3>
                        <p>Hãy thêm user mới để bắt đầu quản lý.</p>
                        @Html.ActionLink("Thêm User", "Create", null, new { @class = "btn btn-primary mt-3" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>

