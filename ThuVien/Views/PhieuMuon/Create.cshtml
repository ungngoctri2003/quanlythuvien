@model ThuVien.Models.PhieuMuon

@{
    ViewBag.Title = "Thêm Phiếu Mượn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <div class="container">
        <h2><i class="notika-icon notika-plus" style="margin-right: 10px;"></i>Thêm Phiếu Mượn Mới</h2>
    </div>
</div>

<div class="page-container">
    <div class="container">
        <div class="content-wrapper">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="card">
                    <div class="card-header">
                        <i class="notika-icon notika-calendar" style="margin-right: 8px;"></i>Thông Tin Phiếu Mượn
                    </div>
                    <div class="card-body">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger", style = "margin-bottom: 20px;" })

                        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 20px;">
                            <div class="form-group">
                                @Html.LabelFor(model => model.MaMuon, htmlAttributes: new { @class = "form-label" })
                                @Html.EditorFor(model => model.MaMuon, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập mã mượn" } })
                                @Html.ValidationMessageFor(model => model.MaMuon, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.NguoiMuon, "Người Mượn", htmlAttributes: new { @class = "form-label" })
                                @Html.DropDownList("NguoiMuon", null, "-- Chọn Sinh Viên --", htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.NguoiMuon, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.NgayMuon, htmlAttributes: new { @class = "form-label" })
                                @Html.EditorFor(model => model.NgayMuon, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                                @Html.ValidationMessageFor(model => model.NgayMuon, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.NgayTra, htmlAttributes: new { @class = "form-label" })
                                @Html.EditorFor(model => model.NgayTra, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                                @Html.ValidationMessageFor(model => model.NgayTra, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.SoNgayMuon, htmlAttributes: new { @class = "form-label" })
                                @Html.EditorFor(model => model.SoNgayMuon, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập số ngày mượn", type = "number", min = "1" } })
                                @Html.ValidationMessageFor(model => model.SoNgayMuon, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.HinhThuc, htmlAttributes: new { @class = "form-label" })
                                @Html.EditorFor(model => model.HinhThuc, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập hình thức mượn" } })
                                @Html.ValidationMessageFor(model => model.HinhThuc, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div style="display: flex; gap: 10px; margin-top: 30px;">
                            <input type="submit" value="Thêm Mới" class="btn btn-success" style="color: #000;" />
                            @Html.ActionLink("Quay Lại", "Index", null, new { @class = "btn btn-secondary" })
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
