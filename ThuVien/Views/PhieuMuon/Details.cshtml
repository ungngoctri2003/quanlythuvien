@model ThuVien.Models.PhieuMuon

@{
    ViewBag.Title = "Chi Tiết Phiếu Mượn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <div class="container">
        <h2><i class="notika-icon notika-calendar" style="margin-right: 10px;"></i>Chi Tiết Phiếu Mượn</h2>
    </div>
</div>

<div class="page-container">
    <div class="container">
        <div class="content-wrapper">
            <div class="card" style="max-width: 800px; margin: 0 auto;">
                <div class="card-header">
                    <i class="notika-icon notika-calendar" style="margin-right: 8px;"></i>Thông Tin Chi Tiết
                </div>
                <div class="card-body">
                    <div style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); padding: 25px; border-radius: 8px; color: white; margin-bottom: 25px;">
                        <div style="font-size: 0.9rem; opacity: 0.9; margin-bottom: 8px;">Mã Phiếu Mượn</div>
                        <div style="font-size: 1.5rem; font-weight: 600;">@Html.DisplayFor(model => model.MaMuon)</div>
                    </div>

                    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 20px; margin-bottom: 25px;">
                        <div style="background: #f8f9fa; padding: 20px; border-radius: 8px; border-left: 4px solid #17a2b8;">
                            <div style="display: flex; align-items: center; margin-bottom: 10px;">
                                <i class="notika-icon notika-user" style="font-size: 20px; color: #17a2b8; margin-right: 10px;"></i>
                                <div>
                                    <div style="font-size: 0.85rem; color: #6c757d; margin-bottom: 5px;">Mã Sinh Viên</div>
                                    <div style="font-weight: 600; color: #333;">
                                        @if (Model.SinhVien != null)
                                        {
                                            <span class="badge badge-info">@Html.DisplayFor(model => model.SinhVien.MaSV)</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div style="background: #f8f9fa; padding: 20px; border-radius: 8px; border-left: 4px solid #28a745;">
                            <div style="display: flex; align-items: center; margin-bottom: 10px;">
                                <i class="notika-icon notika-calendar" style="font-size: 20px; color: #28a745; margin-right: 10px;"></i>
                                <div>
                                    <div style="font-size: 0.85rem; color: #6c757d; margin-bottom: 5px;">Ngày Mượn</div>
                                    <div style="font-weight: 600; color: #333;">@(Model.NgayMuon?.ToString("dd/MM/yyyy") ?? "-")</div>
                                </div>
                            </div>
                        </div>

                        <div style="background: #f8f9fa; padding: 20px; border-radius: 8px; border-left: 4px solid @(Model.NgayTra.HasValue && Model.NgayTra.Value < DateTime.Now ? "#dc3545" : "#ffc107");">
                            <div style="display: flex; align-items: center; margin-bottom: 10px;">
                                <i class="notika-icon notika-calendar" style="font-size: 20px; color: @(Model.NgayTra.HasValue && Model.NgayTra.Value < DateTime.Now ? "#dc3545" : "#ffc107"); margin-right: 10px;"></i>
                                <div>
                                    <div style="font-size: 0.85rem; color: #6c757d; margin-bottom: 5px;">Ngày Trả</div>
                                    <div style="font-weight: 600; color: #333;">
                                        @if (Model.NgayTra.HasValue)
                                        {
                                            <span style="color: @(Model.NgayTra.Value < DateTime.Now ? "#dc3545" : "#28a745");">
                                                @Model.NgayTra.Value.ToString("dd/MM/yyyy")
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-warning">Chưa trả</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div style="background: #f8f9fa; padding: 20px; border-radius: 8px; border-left: 4px solid #6c757d;">
                            <div style="display: flex; align-items: center; margin-bottom: 10px;">
                                <i class="notika-icon notika-calendar" style="font-size: 20px; color: #6c757d; margin-right: 10px;"></i>
                                <div>
                                    <div style="font-size: 0.85rem; color: #6c757d; margin-bottom: 5px;">Số Ngày Mượn</div>
                                    <div style="font-weight: 600; color: #333;">
                                        <span class="badge badge-secondary">@Html.DisplayFor(model => model.SoNgayMuon) ngày</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div style="background: #f8f9fa; padding: 20px; border-radius: 8px; border-left: 4px solid #17a2b8;">
                            <div style="display: flex; align-items: center; margin-bottom: 10px;">
                                <i class="notika-icon notika-form" style="font-size: 20px; color: #17a2b8; margin-right: 10px;"></i>
                                <div>
                                    <div style="font-size: 0.85rem; color: #6c757d; margin-bottom: 5px;">Hình Thức</div>
                                    <div style="font-weight: 600; color: #333;">
                                        <span class="badge badge-info">@Html.DisplayFor(model => model.HinhThuc)</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div style="margin-top: 30px; padding-top: 20px; border-top: 2px solid #f0f0f0;">
                        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 15px;">
                            <div style="background: #f8f9fa; padding: 15px; border-radius: 6px; border-left: 4px solid #667eea;">
                                <div style="font-size: 0.85rem; color: #6c757d; margin-bottom: 5px;">Ngày Tạo</div>
                                <div style="font-weight: 500; color: #333;">@(Model.TimeCreate?.ToString("dd/MM/yyyy HH:mm") ?? "-")</div>
                            </div>
                            <div style="background: #f8f9fa; padding: 15px; border-radius: 6px; border-left: 4px solid #28a745;">
                                <div style="font-size: 0.85rem; color: #6c757d; margin-bottom: 5px;">Ngày Cập Nhật</div>
                                <div style="font-weight: 500; color: #333;">@(Model.TimeUpdate?.ToString("dd/MM/yyyy HH:mm") ?? "Chưa cập nhật")</div>
                            </div>
                        </div>
                    </div>

                    <div style="display: flex; gap: 10px; margin-top: 30px; padding-top: 20px; border-top: 2px solid #f0f0f0;">
                        @Html.ActionLink("Chỉnh Sửa", "Edit", new { id = Model.ID }, new { @class = "btn btn-info" })
                        @Html.ActionLink("Xóa", "Delete", new { id = Model.ID }, new { @class = "btn btn-danger" })
                        @Html.ActionLink("Quay Lại", "Index", null, new { @class = "btn btn-secondary" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
