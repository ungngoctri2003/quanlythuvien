@model ThuVien.Models.PhieuMuon

@{
    ViewBag.Title = "Xóa Phiếu Mượn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header" style="background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);">
    <div class="container">
        <h2><i class="notika-icon notika-close" style="margin-right: 10px;"></i>Xóa Phiếu Mượn</h2>
    </div>
</div>

<div class="page-container">
    <div class="container">
        <div class="content-wrapper">
            <div class="card" style="max-width: 700px; margin: 0 auto; border-left: 5px solid #dc3545;">
                <div class="card-header" style="background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);">
                    <i class="notika-icon notika-close" style="margin-right: 8px;"></i>Cảnh Báo Xóa
                </div>
                <div class="card-body">
                    <div style="text-align: center; margin-bottom: 30px;">
                        <div style="width: 80px; height: 80px; background: linear-gradient(135deg, #dc3545 0%, #c82333 100%); border-radius: 50%; display: inline-flex; align-items: center; justify-content: center; margin-bottom: 20px;">
                            <i class="notika-icon notika-close" style="font-size: 40px; color: white;"></i>
                        </div>
                        <h3 style="color: #dc3545; margin-bottom: 10px;">Bạn có chắc chắn muốn xóa?</h3>
                        <p style="color: #6c757d;">Hành động này không thể hoàn tác. Dữ liệu sẽ bị xóa vĩnh viễn.</p>
                    </div>

                    <div style="background: #fff3cd; border: 1px solid #ffc107; border-radius: 8px; padding: 20px; margin-bottom: 30px;">
                        <h4 style="color: #856404; margin-bottom: 15px; display: flex; align-items: center;">
                            <i class="notika-icon notika-warning" style="margin-right: 10px;"></i>Thông Tin Sẽ Bị Xóa:
                        </h4>
                        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 15px;">
                            <div>
                                <div style="font-size: 0.85rem; color: #856404; margin-bottom: 5px;">Mã Phiếu Mượn</div>
                                <div style="font-weight: 600; color: #333;">@Html.DisplayFor(model => model.MaMuon)</div>
                            </div>
                            <div>
                                <div style="font-size: 0.85rem; color: #856404; margin-bottom: 5px;">Mã Sinh Viên</div>
                                <div style="font-weight: 600; color: #333;">
                                    @if (Model.SinhVien != null)
                                    {
                                        @Html.DisplayFor(model => model.SinhVien.MaSV)
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </div>
                            </div>
                            <div>
                                <div style="font-size: 0.85rem; color: #856404; margin-bottom: 5px;">Ngày Mượn</div>
                                <div style="font-weight: 600; color: #333;">@(Model.NgayMuon?.ToString("dd/MM/yyyy") ?? "-")</div>
                            </div>
                            <div>
                                <div style="font-size: 0.85rem; color: #856404; margin-bottom: 5px;">Ngày Trả</div>
                                <div style="font-weight: 600; color: #333;">
                                    @if (Model.NgayTra.HasValue)
                                    {
                                        @Model.NgayTra.Value.ToString("dd/MM/yyyy")
                                    }
                                    else
                                    {
                                        <span class="badge badge-warning">Chưa trả</span>
                                    }
                                </div>
                            </div>
                            <div>
                                <div style="font-size: 0.85rem; color: #856404; margin-bottom: 5px;">Số Ngày Mượn</div>
                                <div style="font-weight: 600; color: #333;">@Html.DisplayFor(model => model.SoNgayMuon) ngày</div>
                            </div>
                            <div>
                                <div style="font-size: 0.85rem; color: #856404; margin-bottom: 5px;">Hình Thức</div>
                                <div style="font-weight: 600; color: #333;">@Html.DisplayFor(model => model.HinhThuc)</div>
                            </div>
                        </div>
                    </div>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div style="display: flex; gap: 10px; justify-content: center;">
                            <input type="submit" value="Xác Nhận Xóa" class="btn btn-danger" style="min-width: 150px; color: #000;" />
                            @Html.ActionLink("Hủy Bỏ", "Index", null, new { @class = "btn btn-secondary", style = "min-width: 150px;" })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
