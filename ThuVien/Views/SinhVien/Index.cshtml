@model IEnumerable<ThuVien.Models.SinhVien>

@{
    ViewBag.Title = "Danh Sách Sinh Viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <div class="container">
        <h2><i class="notika-icon notika-menus" style="margin-right: 10px;"></i>Danh Sách Sinh Viên</h2>
    </div>
</div>

<div class="page-container">
    <div class="container">
        <div class="content-wrapper">
            <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
                <h3 style="margin: 0; color: #667eea;">Quản lý sinh viên</h3>
                @Html.ActionLink("Thêm Mới", "Create", null, new { @class = "btn btn-primary", style = "color: #000;" })
            </div>

            <div class="table-wrapper">
                @if (Model != null && Model.Any())
                {
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Mã SV</th>
                                <th>Họ Tên</th>
                                <th>Lớp</th>
                                <th>Ngày Tạo</th>
                                <th>Ngày Cập Nhật</th>
                                <th style="text-align: center;">Thao Tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><strong>@Html.DisplayFor(modelItem => item.MaSV)</strong></td>
                                    <td>@Html.DisplayFor(modelItem => item.HoTen)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Lop)</td>
                                    <td>@(item.TimeCreate?.ToString("dd/MM/yyyy") ?? "-")</td>
                                    <td>@(item.TimeUpdate?.ToString("dd/MM/yyyy") ?? "-")</td>
                                    <td>
                                        <div class="action-links">
                                            @Html.ActionLink("Sửa", "Edit", new { id = item.ID }, new { @class = "btn-edit" })
                                            @Html.ActionLink("Chi Tiết", "Details", new { id = item.ID }, new { @class = "btn-details" })
                                            @Html.ActionLink("Xóa", "Delete", new { id = item.ID }, new { @class = "btn-delete" })
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="empty-state">
                        <i class="notika-icon notika-menus"></i>
                        <h3>Chưa có dữ liệu</h3>
                        <p>Hãy thêm sinh viên mới để bắt đầu quản lý.</p>
                        @Html.ActionLink("Thêm Sinh Viên", "Create", null, new { @class = "btn btn-primary mt-3" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>
